<h2>Decision Details</h2>
<div class="form-row">
  <div class="form-group col-md-5">
    <%= f.label :name, "Decision Name" %>
    <%= f.text_field :name, required: true, class: "form-control mb-2 mr-sm-2" %>
  </div>

  <div class="form-group col-md-4">
    <%= f.label :circle_id, "Deciding Circle" %>
    <%= f.select :circle_id, @circles.map { |circle| [circle.name, circle.id] }, {required: true}, { class: "form-control mb-2 mr-sm-2" } %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :date_decided, "Date Decided (Required)" %>
    <div class="input-group" aria-desbribedby="dd-help-block">
      <%= f.date_field :date_decided, { required: true, max: Date.today, class: "form-control mb-2 mr-sm-2" } %>
    </div>
    <small id="dd-help-block" class="form-text text-muted">Date Decided must be today or earlier</small>
  </div>
</div>

<div class="form-row">

  <div class="form-group col-md-9">
    <%= f.label :description %>
    <%= f.text_area :description, {required: true, class: "form-control", size: "100x5" } %>
    <small class="form-text text-muted">Viewable by all visitors to this site</small>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :review_by_date, "Review On (Optional)" %>
    <div class="input-group">
      <%= f.date_field :review_by_date, class: "form-control mb-2 mr-sm-2" %>
    </div>
  </div>
</div>

<h2>Supporting Documents (Optional)</h2>
<p><em>(Eg: Minutes, Rejected Proposal, or Accepted Proposal from OnlyOffice. Note: these will be viewable only by those able to log in to OnlyOffice)</em></p>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.label(:supp_doc_one_type, "Document 1 Type") %>
    <%= f.text_field(:supp_doc_one_type, class: 'form-control mb-2 mr-sm-2') %>
  </div>
  <div class="form-group col-md-8">
    <%= f.label(:supp_doc_one_link, "Link") %>
    <%= f.text_field(:supp_doc_one_link, class: 'form-control mb-2 mr-sm-2') %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.label(:supp_doc_two_type, "Document 2 Type") %>
    <%= f.text_field(:supp_doc_two_type, class: 'form-control mb-2 mr-sm-2') %>
  </div>
  <div class="form-group col-md-8">
    <%= f.label(:supp_doc_two_link, "Link") %>
    <%= f.text_field(:supp_doc_two_link, class: 'form-control mb-2 mr-sm-2') %>
  </div>
</div>
