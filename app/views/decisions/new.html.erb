<div class="container">
  <h1>Log a New Decision</h1>

  <%= form_for @decision do %>

    <div class="form-row">
      <div class="form-group col-md-4">
        <%= label_tag('decision[name]', "Decision Name") %>
        <%= text_field_tag 'decision[name]', "", class: 'form-control mb-2 mr-sm-2' %>
      </div>

      <div class="form-group col-md-4">
        <%= label_tag('decision[circle_id]', "Deciding Circle") %>
        <%= select_tag('decision[circle_id]', options_for_select(@circles.map {|circle| [circle.name, circle.id]}), class: "form-control mb-2 mr-sm-2") %>
      </div>

      <div class="col-md-4">
        <div class="form-group">
          <%= label_tag('decision[date_decided]', "Date Decided") %>
          <%= date_field_tag('decision[date_decided]', class: 'form-control mb-2 mr-sm-2') %>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-12">
        <%= label_tag('decision[description]', "Decision Description") %>
        <%= text_area_tag('decision[description]', "", class: "form-control", size: "100x5") %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-md-6">
        <div class="form-group">
          <%= label_tag('decision[is_incorporated]', "Is the Decision Incorporated?") %>
          <%= radio_button_tag('decision[is_incorporated]', "true") %>
          <%= label_tag('decision[is_incorporated]', "Yes", class: "form-check-label") %>
          <%= radio_button_tag('decision[is_incorporated]', "false") %>
          <%= label_tag('decision[is_incorporated]', "No", class: "form-check-label") %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= label_tag('decision[review_by_date]', "If you answered 'No' to the previous question, please enter the date the decision should be reviewed by") %>
          <%= date_field_tag('decision[review_by_date]', class: 'form-control') %>
        </div>
      </div>
    </div>
    
    <%= submit_tag("Log Decision", class: "btn btn-primary") %>
  <% end %>
</div>
